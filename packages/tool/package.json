{
    "name": "@react-native-pulse-debugger/tool",
    "version": "0.0.1",
    "main": "./dist-electron/main/index.js",
    "description": "A desktop application for debugging React Native applications, providing real-time monitoring, network inspection, and state inspection.",
    "scripts": {
        "start": "electron-forge start",
        "package": "electron-forge package",
        "make": "electron-forge make",
        "build": "tsc && vite build",
        "build:mac": "yarn build && electron-builder --mac",
        "build:win": "yarn build && electron-builder --win",
        "dev": "vite",
        "lint": "eslint src/",
        "clean": "rm -rf dist",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage"
    },
    "debug": {
        "env": {
            "VITE_DEV_SERVER_URL": "http://127.0.0.1:7777/"
        }
    },
    "dependencies": {
        "@react-native-pulse-debugger/types": "workspace:*",
        "@tailwindcss/cli": "^4.1.8",
        "@tailwindcss/postcss": "^4.1.8",
        "class-variance-authority": "^0.7.1",
        "clsx": "^2.1.1",
        "electron-squirrel-startup": "^1.0.0",
        "electron-store": "^8.1.0",
        "lucide-react": "^0.513.0",
        "postcss": "^8.5.4",
        "react": "19.0.0",
        "react-dom": "19.0.0",
        "react-router-dom": "^7.6.2",
        "tailwind-merge": "^3.3.0",
        "tailwindcss": "^4.1.8",
        "ws": "^8.18.2",
        "zustand": "^5.0.5"
    },
    "devDependencies": {
        "@electron-forge/cli": "^7.2.0",
        "@electron-forge/maker-deb": "^7.2.0",
        "@electron-forge/maker-rpm": "^7.2.0",
        "@electron-forge/maker-squirrel": "^7.2.0",
        "@electron-forge/maker-zip": "^7.2.0",
        "@types/jest": "^29.5.12",
        "@types/node": "^20.11.24",
        "@types/react": "19.0.0",
        "@types/react-dom": "19.0.0",
        "@types/ws": "^8.18.1",
        "@vitejs/plugin-react": "^4.2.0",
        "electron": "36.4.0",
        "electron-builder": "26.0.12",
        "jest": "^29.7.0",
        "ts-jest": "^29.1.2",
        "typescript": "5.0.4",
        "vite": "^5.0.0",
        "vite-plugin-electron": "^0.29.0",
        "vite-plugin-electron-renderer": "^0.14.6"
    },
    "optionalDependencies": {
        "bufferutil": "^4.0.8",
        "utf-8-validate": "^6.0.3"
    }
}
