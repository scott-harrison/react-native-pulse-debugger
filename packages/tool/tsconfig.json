{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "target": "ES2020",
        "module": "CommonJS",
        "lib": ["DOM", "ES2020"],
        "jsx": "react-jsx",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"],
            "@/assets/*": ["src/assets/*"]
        }
    },
    "include": ["src/**/*", "package.json"],
    "exclude": ["node_modules", "dist"]
}
