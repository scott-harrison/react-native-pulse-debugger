{
  "name": "@pulse/debugger-lib",
  "version": "0.1.0",
  "description": "A debugging tool for React Native applications that provides real-time monitoring of Redux state, network requests, console logs, through an intuitive desktop interface.",
  "source": "./src/index.ts",
  "main": "./lib/module/index.js",
  "exports": {
    ".": {
      "types": "./lib/typescript/src/index.d.ts",
      "default": "./lib/module/index.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "src",
    "lib",
    "!**/__tests__",
    "!**/__fixtures__",
    "!**/__mocks__",
    "!**/.*"
  ],
  "scripts": {
    "example": "REACT_NATIVE_PACKAGER_HOSTNAME='127.0.0.1' && yarn prepare && cd example && yarn start",
    "test": "jest",
    "typecheck": "tsc",
    "lint": "eslint \"**/*.{js,ts}\"",
    "clean": "del-cli lib",
    "prepare": "bob build",
    "release": "release-it"
  },
  "keywords": [
    "react-native",
    "debugger",
    "development",
    "redux",
    "network-inspector",
    "logger",
    "performance",
    "monitoring",
    "developer-tools"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/scott-harrison/react-native-pulse-debugger.git"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/scott-harrison/react-native-pulse-debugger/issues"
  },
  "homepage": "https://github.com/scott-harrison/react-native-pulse-debugger#readme",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "dependencies": {
    "@babel/runtime": "^7.24.0",
    "@pulse/shared-types": "workspace:*",
    "react-native-get-random-values": "^1.11.0",
    "redux": "^5.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.20.0",
    "@babel/plugin-transform-runtime": "^7.24.0",
    "@commitlint/config-conventional": "^19.6.0",
    "@eslint/compat": "^1.2.7",
    "@eslint/eslintrc": "^3.3.0",
    "@eslint/js": "^9.22.0",
    "@evilmartians/lefthook": "^1.5.0",
    "@react-native/eslint-config": "^0.78.0",
    "@release-it/conventional-changelog": "^9.0.2",
    "@types/jest": "^29.5.5",
    "@types/react": "^19.0.12",
    "@types/react-native-get-random-values": "^1",
    "commitlint": "^19.6.1",
    "del-cli": "^5.1.0",
    "eslint": "^9.22.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-prettier": "^5.2.3",
    "expo-constants": "17.0.8",
    "jest": "^29.7.0",
    "prettier": "^3.0.3",
    "react": "18.3.1",
    "react-native": "0.76.9",
    "react-native-builder-bob": "^0.38.3",
    "react-native-device-info": "^14.0.4",
    "release-it": "^17.10.0",
    "typescript": "^5.2.2"
  },
  "peerDependencies": {
    "expo-constants": ">=15.0.0",
    "react": "*",
    "react-native": "*",
    "react-native-device-info": ">=14.0.0"
  },
  "packageManager": "yarn@4.8.1",
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}"
    },
    "npm": {
      "publish": true
    },
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": {
          "name": "angular"
        }
      }
    }
  },
  "prettier": {
    "quoteProps": "consistent",
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "useTabs": false
  },
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      [
        "module",
        {
          "esm": true
        }
      ],
      [
        "typescript",
        {
          "project": "tsconfig.build.json"
        }
      ]
    ]
  }
}
